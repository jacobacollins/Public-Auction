<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="600.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="AuctionCentralController">
<children>
    <HBox prefHeight="30.0" prefWidth="400.0">
        <children>
            <Label prefHeight="30.0" prefWidth="70.0" text="Bank IP">
                <font>
                    <Font size="18.0" />
                </font>
            </Label>
            <TextField fx:id="tfBankIP" prefHeight="30.0" prefWidth="130.0" text="127.0.0.1" HBox.hgrow="ALWAYS" />
            <Button fx:id="btnConnectBank" mnemonicParsing="false" onAction="#btnConnectBank" text="Connect to Bank" />
        </children>
    </HBox>
    <Label fx:id="lblConnectionInfo" prefHeight="35.0" prefWidth="300.0" text="Connection Info" />
    <Label prefHeight="15.0" prefWidth="300.0" text="Registered Auction Houses" />
    <Label fx:id="lblAuctionHousesList" alignment="TOP_LEFT" prefHeight="170.0" prefWidth="300.0" text="No Auction Houses registered." />
    <TextArea fx:id="taOutput" editable="false" layoutX="1.0" prefHeight="350.0" prefWidth="300.0" VBox.vgrow="ALWAYS" />
</children>
</VBox>
